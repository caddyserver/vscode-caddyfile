{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "out",
        "sourceMap": true,
        "target": "es6",
        "lib": [ "es2015" ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
    },

    "exclude": [
        "node_modules",
        "third_party"
    ]
}
