{
    "name": "caddyfile-support",
    "displayName": "Caddyfile Support",
    "description": "Adds support for Caddyfile syntax highlighting and automatic formatting.",
    "version": "0.1.0",
    "license": "MIT",
    "publisher": "matthewpi",
    "private": true,

    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],

    "repository": {
        "type": "git",
        "url": "https://github.com/matthewpi/vscode-caddyfile-support"
    },

    "bugs": {
        "url": "https://github.com/matthewpi/vscode-caddyfile-support/issues"
    },

    "author": {
        "name": "Matthew Penner",
        "email": "me@matthewp.io",
        "url": "https://matthewp.io"
    },

    "main": "./dist/main.js",

    "scripts": {
        "vscode:prepublish": "npm run compile",
        "postinstall": "cd server && yarn install && cd ..",

        "compile": "webpack --mode production && tsc -b ./server",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "watch": "tsc -watch -p ./"
    },

    "extensionDependencies": [],

    "dependencies": {
        "tree-kill": "file:third_party/tree-kill",
        "vscode-languageclient": "^6.1.3"
    },

    "devDependencies": {
        "@types/node": "^14.14.10",
        "@types/vscode": "^1.51.0",
        "ts-loader": "^8.0.11",
        "tslint": "^6.1.3",
        "typescript": "^4.1.2",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    },

    "engines": {
        "vscode": "^1.48.0"
    },

    "activationEvents": [
        "workspaceContains:**/Caddyfile",
        "workspaceContains:**/caddyfile",
        "workspaceContains:**/*.Caddyfile",
        "workspaceContains:**/*.caddyfile",
        "onLanguage:caddyfile"
    ],

    "contributes": {
        "languages": [
            {
                "id": "caddyfile",
                "configuration": "./language-configuration.json",

                "aliases": [
                    "Caddyfile",
                    "caddyfile"
                ],

                "extensions": [
                    "Caddyfile",
                    "caddyfile",
                    "*.Caddyfile",
                    "*.caddyfile"
                ]
            }
        ],

        "grammars": [
            {
                "language": "caddyfile",
                "scopeName": "source.Caddyfile",
                "path": "./syntaxes/caddyfile.tmLanguage.json"
            }
        ],

        "configurationDefaults": {
            "[caddyfile]": {
                "editor.insertSpaces": false,
                "editor.formatOnSave": true
            }
        },

        "configuration": {
            "title": "Caddyfile",

            "properties": {
                "caddyfile.executable": {
                    "type": "string",
                    "default": "",
                    "description": "Location of the `caddy` executable to use for code formatting and linting."
                }
            }
        }
    }
}
